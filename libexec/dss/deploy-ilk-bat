#!/usr/bin/env bash

# shellcheck source=bin/lib/common.sh
. "$LIB_DIR/common.sh"

if [[ -z "$BAT" ]]; then
    BAT=$(dappCreate dss-deploy BAT "$(seth --to-uint256 "$(seth --to-wei 1000000 ETH)")")
    log "BAT=$BAT"
    export BAT
fi

# shellcheck source=/dev/null
source "$LIBEXEC_DIR/dss/deploy-ilk" "BAT" "${1:-"A"}" "GemJoin"
