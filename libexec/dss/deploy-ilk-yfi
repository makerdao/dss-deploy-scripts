# shellcheck source=lib/common.sh
. "$LIB_DIR/common.sh"

if [[ -z "$YFI" ]]; then
    YFI=$(dappCreate dss-gem-joins YFI "$(seth --to-uint256 "$(seth --to-wei 1000000 ETH)")")
    log "YFI=$YFI"
    export YFI
fi

# shellcheck source=libexec/dss/deploy-ilk
. "$LIBEXEC_DIR/dss/deploy-ilk" "YFI" "${1:-"A"}" "GemJoin"
